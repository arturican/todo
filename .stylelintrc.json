{
  "plugins": ["stylelint-prettier"],
  "extends": ["stylelint-config-standard", "stylelint-prettier/recommended", "stylelint-config-css-modules"],
  "rules": {
    "prettier/prettier": true,
    "value-keyword-case": [
      "lower",
      { "ignoreKeywords": [], "camelCaseSvgKeywords": true, "ignoreProperties": ["/[a-z]([a-zA-Z0-9]+)/"] }
    ]
  }
}